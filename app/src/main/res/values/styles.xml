<resources>

    <!-- Base application theme. -->
    <style name="CnnTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorControlHighlight">@color/colorPrimaryDark</item>
        <item name="android:windowBackground">@drawable/main_background</item>
    </style>

    <style name="CnnTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowBackground">@drawable/main_background</item>
    </style>

    <style name="CnnTheme.Settings" parent="PreferenceThemeOverlay">
        <item name="android:windowBackground">@android:color/black</item>
        <item name="windowActionBar">true</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="colorPrimary">#979696</item>
        <item name="colorPrimaryDark">#979696</item>
        <item name="android:colorAccent">@color/colorAccent</item>
        <item name="android:textColorHint">@android:color/white</item>
        <item name="android:textColorSecondary">@color/colorPrimary</item>
    </style>

    <style name="CnnTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="MyProgressBar" parent="@style/Widget.AppCompat.ProgressBar">
        <item name="android:progressBackgroundTint">@color/colorAccent</item>
        <item name="android:progressTint">@color/colorAccent</item>
    </style>

    <style name="SettingDialogStyle">
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColorSecondary">@android:color/white</item>
        <item name="android:textColorPrimary">@android:color/white</item>
        <item name="android:textColorTertiary">@android:color/white</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="colorPrimary">#C4C4C4</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="android:colorBackground">@color/colorPrimaryDark</item>
        <item name="android:background">@color/colorPrimaryDark</item>
        <item name="android:dialogTitle">""</item>
    </style>

    <style name="DialogTheme" parent="Theme.AppCompat.Dialog.Alert">
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColorSecondary">@android:color/white</item>
        <item name="android:textColorPrimary">@android:color/white</item>
        <item name="android:textColorTertiary">@android:color/white</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="colorPrimary">#C4C4C4</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="android:colorBackground">@color/colorPrimaryDark</item>
        <item name="android:background">@color/colorPrimaryDark</item>
        <item name="android:dialogTitle">""</item>
    </style>

    <style name="SettingsFragmentStyle">
        <item name="android:textColorAlertDialogListItem">@android:color/white</item>
        <item name="android:dialogPreferenceStyle">@style/SettingDialogStyle</item>
        <item name="android:textColorPrimary">@android:color/white</item>
        <item name="android:textColorSecondary">@color/colorAccent</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:windowActionBar">true</item>
        <item name="android:dialogTheme">@style/SettingDialogStyle</item>
        <item name="alertDialogTheme">@style/SettingDialogStyle</item>

    </style>
</resources>
